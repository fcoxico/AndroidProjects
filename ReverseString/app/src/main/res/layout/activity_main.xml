<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_entrada"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Insira aqui o texto" />

    <TextView
        android:id="@+id/tv_saida"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_entrada"
        android:layout_marginTop="50dp"
        android:hint="Texto Espelhado"
        android:shadowColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_ReverseString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_saida"
        android:layout_alignParentEnd="true"
        android:text="Reverse String" />




</RelativeLayout>