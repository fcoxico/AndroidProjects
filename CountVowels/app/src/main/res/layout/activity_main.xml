<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_entrada"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Insira aqui o texto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_wrapHeight="131"
        tools:layout_conversion_wrapWidth="1080" />

    <TextView
        android:id="@+id/txtv_saida_vogais"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:hint="Quantidade de Vogais"
        android:shadowColor="#000000"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_entrada"
        tools:layout_conversion_wrapHeight="131"
        tools:layout_conversion_wrapWidth="1080" />

    <TextView
        android:id="@+id/txtv_digitos"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:hint="Quantidade de Caracteres"
        android:shadowColor="#000000"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_entrada"
        tools:layout_conversion_wrapHeight="131"
        tools:layout_conversion_wrapWidth="1080" />

    <Button
        android:id="@+id/btn_contavogais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:text="Contar"
        app:layout_constraintTop_toBottomOf="@+id/txtv_saida_vogais"
        tools:layout_conversion_wrapHeight="126"
        tools:layout_conversion_wrapWidth="1080" />


</android.support.constraint.ConstraintLayout>

